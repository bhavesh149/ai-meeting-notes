{
  "apps": [
    {
      "name": "ai-meeting-notes",
      "script": "./dist/server.js",
      "cwd": "/home/ubuntu/ai-meeting-notes",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "production",
        "PORT": "4000"
      },
      "env_file": "/home/ubuntu/ai-meeting-notes/.env",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "/home/ubuntu/.pm2/logs/ai-meeting-notes-error.log",
      "out_file": "/home/ubuntu/.pm2/logs/ai-meeting-notes-out.log",
      "log_file": "/home/ubuntu/.pm2/logs/ai-meeting-notes-combined.log",
      "time": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "max_memory_restart": "1G",
      "restart_delay": 4000,
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "logs",
        ".git"
      ]
    }
  ]
}
